{
  "initial_state": "idle",
  "states": {
    "idle": {
      "transitions": [
        { "trigger": "start", "target": "charging" }
      ]
    },
    "charging": {
      "enter_fx": ["chestcavity:mind_thoughts_orbit"],
      "enter_actions": [
        { "id": "emit.fx", "fxId": "chestcavity:mind_thoughts_orbit", "intensity": 1.0 }
      ],
      "update_period": 20,
      "update_actions": [
        { "id": "emit.fx", "fxId": "chestcavity:mind_thoughts_pulse", "intensity": 0.6 }
      ],
      "transitions": [
        { "trigger": "auto", "target": "cooldown", "min_ticks": 200 },
        { "trigger": "cancel", "target": "cancel" }
      ]
    },
    "charged": {
      "transitions": [
        { "trigger": "auto", "target": "cooldown", "min_ticks": 1 }
      ]
    },
    "releasing": {
      "transitions": [
        { "trigger": "auto", "target": "cooldown", "min_ticks": 1 }
      ]
    },
    "cooldown": {
      "transitions": [
        { "trigger": "auto", "target": "idle", "min_ticks": 40 }
      ]
    },
    "cancel": {
      "enter_actions": [
        { "id": "emit.fx", "fxId": "chestcavity:mind_thoughts_pulse", "intensity": 1.0 }
      ],
      "transitions": [
        { "trigger": "auto", "target": "cooldown", "min_ticks": 10 }
      ]
    }
  }
}
